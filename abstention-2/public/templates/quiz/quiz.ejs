<% if(quiz){%>
<div id="quizSection">
    <div id="hearts">
        <img src="img/coeur-petit-plein.svg" height="18px">
        <img src="img/coeur-petit-plein.svg" height="18px">
        <img src="img/coeur-petit-plein.svg" height="18px">
    </div>
    <div id="question">
        <%= quiz.question %>
    </div>

    <div id="answers">
        <% for(var i = 0; i < quiz.answer.length; i++) {%>
        <% if (i == quiz.goodAnswer) { %>
        <input id="goodAnswer" type="button" value="<%= quiz.answer[i] %>">
        <% } else{ %>
        <input class="badAnswer" type="button" value="<%= quiz.answer[i] %>">
        <% } %>


        <% } %>
    </div>
</div>
<% } %>